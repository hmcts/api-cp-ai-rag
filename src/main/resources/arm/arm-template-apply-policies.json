{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiManagementServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management service."
      }
    },
    "apiName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API."
      }
    },
    "functionAppBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the Azure Function App."
      }
    },
    "functionKey": {
      "type": "securestring",
      "metadata": {
        "description": "The function key for the Azure Function."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service",
      "apiVersion": "2021-08-01",
      "name": "[parameters('apiManagementServiceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Developer",
        "capacity": 1
      },
      "properties": {}
    },
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "apiVersion": "2021-08-01",
      "name": "[concat(parameters('apiManagementServiceName'), '/', parameters('apiName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service', parameters('apiManagementServiceName'))]"
      ],
      "properties": {
        "displayName": "RAG Service API",
        "path": "api-cp-ai-rag",
        "format": "openapi-link",
        "value": "https://raw.githubusercontent.com/hmcts/api-cp-ai-rag/dev/add-api-contract/src/main/resources/openapi/ai-rag-service.openapi.yml"
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/operations/policies",
      "apiVersion": "2021-08-01",
      "name": "[concat(parameters('apiManagementServiceName'), '/', parameters('apiName'), '/answer-user-query/policy')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apiManagementServiceName'), parameters('apiName'))]"
      ],
      "properties": {
        "value": "[concat('<policies><inbound><set-backend-service base-url=\"', parameters('functionAppBaseUrl'), '\" /><set-query-parameter name=\"code\" value=\"', parameters('functionKey'), '\" /><rewrite-uri template=\"/api/AnswerRetrieval\" /></inbound><backend><forward-request /></backend><outbound><base /></outbound></policies>')]",
        "format": "xml"
      }
    }
  ]
}